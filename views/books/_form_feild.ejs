<div>
    <lable>Title</lable>
    <input type="text" name="title" value="<%= book.title %>">
</div>
<div>
    <lable>Author</lable>
    <select name="author">
        <% authors.forEach(item =>{ %>
        <% if(item.id === book.author) { %>
        <option selected label="<%= item.name %>" value="<%= item.id %>">
            <% }else { %>
        <option label="<%= item.name %>" value="<%= item.id %>">
            <% } %>
            <% }) %>
    </select>
</div>
<div>
    <label> Publish Date</label>
    <input type="date" name="publishDate" value="<%= book.publishDate == null? "" : 
  book.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label> Page Count</label>
    <input type="number" name="pageCount" value="<%= book.pageCount %>">
</div>
<div>
    <label> Cover </label>
    <input type="file" name="bookCover" class="filepond">
</div>
<div>
    <label> Description</label>
    <textarea name="description"> <%= book.description %> </textarea>
</div>